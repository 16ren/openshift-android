<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
        <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:id="@+id/cartridgeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" 
            android:contentDescription="Cartridge Logo"/>
    </LinearLayout>
    
            <TextView
        android:id="@+id/cartridgeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_marginLeft="60dp"
        android:text="Cartridge Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/cartridgeDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cartridgeName"
        android:layout_below="@+id/cartridgeName"
        android:text="Cartridge Display Name"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/cartridgeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cartridgeDisplayName"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"
        android:text="Cartridge Status" />

</RelativeLayout>
